@model PagedList.IPagedList<ShoppingOnline.Models.DTO.ProductDTO>
@using PagedList.Mvc
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int dem = 1;
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Quản lý sản phẩm</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            @if (TempData["add_success"] != null)
            {
                <div class="alert alert-success" id="AlertBox">
                    @TempData["add_success"]
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-4" style="margin-bottom: 10px">
                <a href="/Admin/Product/Add" class="btn btn-lg btn-primary">Thêm mới sản phẩm</a>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Sản phẩm đang đăng bán
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Hình ảnh</th>
                                        <th>Giá gốc</th>
                                        <th>Giá km</th>
                                        <th>Số lượng tồn</th>
                                        <th>Nhà cung cấp</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@dem</td>
                                            <td>@item.Product_Name</td>
                                            <td><img src="~/Assets/images/product/@item.Image" alt="" width="110px" /></td>
                                            <td>@item.Promotion_Price.Value.ToString("N0")</td>
                                            @if (item.Price != null)
                                            {
                                                <td>@item.Price.Value.ToString("N0")</td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }

                                            <td>@item.Quantity</td>
                                            <td>@item.Provider_Name</td>
                                            <td>
                                                <a href="/Admin/SerialType/SerialType_Product/@item.ID" class="btn btn-primary" title="Chi tiết size, hình ảnh, màu"><i class="fa fa-info-circle"></i></a>
                                                <a href="/Admin/Product/Edit/@item.ID" class="btn btn-default" title="Sửa sản phẩm"><i class="fa fa-edit"></i></a>
                                                <button class="btn btn-danger btnDelete" data-id="@item.ID" title="Xóa sản phẩm"><i class="fa fa-remove"></i></button>
                                            </td>
                                        </tr>
                                        dem++;
                                    }


                                </tbody>
                            </table>
                            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>

        </div>

    </div>
    <!-- /.container-fluid -->
</div>

@section jsAdmin{
    
    <script type="text/javascript">
        $(function () {
            //nếu không có thao tác gì thì ẩn đi
            $('#AlertBox').removeClass('hide');

            //Sau khi hiển thị lên thì delay 1s và cuộn lên trên sử dụng slideup
            $('#AlertBox').delay(2000).slideUp(500);


            $('.btnDelete').off('click').on('click', function () {
                const notice = PNotify.notice({
                    title: 'Thông báo',
                    text: 'Bạn thật sự muốn xóa?',
                    icon: 'fa fa-question-circle',
                    width: '360px',
                    minHeight: '110px',
                    hide: false,
                    closer: false,
                    sticker: false,
                    destroy: true,
                    stack: new PNotify.Stack({
                        dir1: 'down',
                        modal: true,
                        firstpos1: 25,
                        overlayClose: false
                    }),
                    modules: new Map([
                        ...PNotify.defaultModules,
                        [PNotifyConfirm, {
                            confirm: true
                        }]
                    ])
                });

                notice.on('pnotify:confirm', () =>
                    $.ajax({
                        data: { ID: $(this).data('id') },
                        url: '/Admin/Product/Delete',
                        dataType: 'Json',
                        type: 'POST',
                        success: function (res) {
                            if (res.status == true) {
                                
                                window.location.href = "/Admin/Product/Index";
                                PNotify.success({
                                    title: 'THÔNG BÁO!!',
                                    text: 'Xóa sản phẩm thành công.'
                                });
                            } else {
                                
                                window.location.href = "/Admin/Product/Index";
                                PNotify.error({
                                    title: 'THÔNG BÁO!!',
                                    text: 'Xóa sản phẩm KHÔNG thành công. Bạn vui lòng xóa chi tiết sản phẩm trước.'
                                });
                            }
                        }
                    })

                );


            });
        });
    </script>

}

