@model List<ShoppingOnline.Models.DTO.InwardDTO>
@{
    ViewBag.Title = "Chi tiết nhập kho";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int dem = 0;
    var inward = ViewBag.Inward as ShoppingOnline.Models.Entities.Inward;
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Chi tiết nhập kho ngày: @inward.Createdate.Value.ToString("dd/MM/yyyy hh:mm tt")</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr role="row">
                            <th class="text-center">
                                STT
                            </th>
                            <th class="text-center">
                                Sản phẩm
                            </th>
                            <th class="text-center">
                                Hình ảnh
                            </th>
                            <th class="text-center">
                                Số lượng
                            </th>
                            <th class="text-center">
                                Đơn giá
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            dem++;

                            <tr class="gradeA even" role="row">
                                <td class="text-center">@dem</td>
                                <td>@item.Product_Name</td>
                                <td><img src="~/Assets/images/product/@item.Product_Image" alt="" width="110px" /></td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-center">@item.Amount.Value.ToString("N0")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

