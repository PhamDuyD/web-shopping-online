
@{
    ViewBag.Title = "Nhật ký nhập kho";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var lstInWard = ViewBag.lstInWard as List<ShoppingOnline.Models.Entities.Inward>;
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Nhật ký nhập kho</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            @if (TempData["add_success"] != null)
            {
                <div class="alert alert-success" id="AlertBox">
                    @TempData["add_success"]
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-4" style="margin-bottom: 10px">
                <a href="/Admin/Inward/Add" class="btn btn-lg btn-primary">Nhập kho </a>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr role="row">
                            <th class="text-center">
                                STT
                            </th>
                            <th class="text-center">
                                Ngày nhập
                            </th>
                            <th class="text-center">
                                Lượng hàng nhập
                            </th>
                            <th class="text-center">
                                Tổng tiền
                            </th>
                            <th class="text-center">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (lstInWard != null)
                        {
                            int dem = 0;

                            foreach (var item in lstInWard)
                            {
                                dem++;

                                <tr class="gradeA even" role="row">
                                    <td class="text-center">@dem</td>
                                    <td class="text-center">@item.Createdate.Value.ToString("hh:mm tt dd/MM/yyyy")</td>
                                    <td class="text-center">@item.TotalQuantity</td>
                                    <td class="text-center">@item.TotalAmount.Value.ToString("N0")</td>
                                    <td class="text-center">
                                        <a href="/Admin/Inward/Inward_Detail/@item.ID" class="btn btn-primary">
                                        <i class="fa fa-calculator" style="padding-right: 10px;"></i>Xem chi tiết</a>
                                    </td>
                                </tr>
                            }

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

